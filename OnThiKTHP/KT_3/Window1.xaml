<Window x:Class="KT_3.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KT_3"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="dgSP" 
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            AlternatingRowBackground="AliceBlue"
            HorizontalAlignment="Center" Height="251" Margin="0,75,0,0" VerticalAlignment="Top" Width="688" FontSize="14">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã SP" Binding="{Binding MaSp}" Width="70"/>
                <DataGridTextColumn Header="Tên SP" Binding="{Binding TenSp}" Width="180"/>
                <DataGridTextColumn Header="Tên loại SP" Binding="{Binding TenLoai}" Width="100"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding SoLuong}" Width="100"/>
                <DataGridTextColumn Header="Đơn giá" Binding="{Binding DonGia}" Width="100"/>
                <DataGridTextColumn Header="Thành tiền" Binding="{Binding TongTien}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
